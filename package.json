{
  "name": "marketpulse-rt",
  "version": "1.0.0",
  "packageManager": "yarn@4.11.0",
  "author": "Jesse Lewis",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lazercat/MarketPulseRT.git"
  },
  "workspaces": [
    "apps/web-dashboard",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web-dashboard",
    "dev:api-gateway": "dotnet run --project apps/api-gateway/ApiGateway.csproj",
    "dev:market-data": "dotnet run --project apps/market-data-service/MarketDataService.csproj",
    "build:js": "turbo run build",
    "build:dotnet": "dotnet build apps/market-data-service/MarketDataService.csproj && dotnet build apps/api-gateway/ApiGateway.csproj",
    "build": "yarn build:js && yarn build:dotnet",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "postinstall": "if [ \"$SKIP_DOTNET_RESTORE\" = \"1\" ]; then echo \"Skipping dotnet restore\"; else dotnet restore apps/market-data-service/MarketDataService.csproj && dotnet restore apps/api-gateway/ApiGateway.csproj; fi"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  }
}
